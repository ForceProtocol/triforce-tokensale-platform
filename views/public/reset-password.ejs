<%- partial('./partials/header.ejs') %>


<main id="content" role="main">
    <!-- Form -->
    <div class="d-flex align-items-center position-relative min-height-100vh--lg">

          <!-- End Testimonials Carousel Pagination -->

         

      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-8 col-lg-7 col-xl-6 offset-md-2 offset-lg-2 offset-xl-3 u-space-2 u-space-0--lg">
            <!-- Form -->
            <form method="POST" class="js-validate mt-5">
              <!-- Title -->
              <div class="mb-7">
                <h2 class="h3 text-primary font-weight-normal mb-0">Reset you <span class="font-weight-bold">password</span></h2>
                <p>Enter a new password below to access your account.</p>
              </div>
              <!-- End Title -->

              <% if(flash.has('success')){ %>
              <div class="alert alert-success">
                <% flash.get('success').forEach(function (message) { %>
                <%- message %><br />
                <% }) %>
              </div>
              <% } %>

              	<% if(flash.has('errors')){ %>
	  				<div class="alert alert-danger">
	  					<% flash.get('errors').forEach(function (message) { %>
	  					<%- message %><br />
	  					<% }) %>
	  				</div>
  				<% } %>


              <!-- Input -->
              <div class="js-form-message mb-4">
                <label class="h6 small d-block text-uppercase">New password</label>

                <div class="js-focus-state input-group u-form">
                  <input class="form-control u-form__input" type="password" name="password" required="" data-msg="Please enter a valid password." data-error-class="u-has-error" data-success-class="u-has-success" autocomplete="off">
                </div>
              </div>
              <!-- End Input -->


              <!-- Input -->
              <div class="js-form-message mb-4">
                <label class="h6 small d-block text-uppercase">Re-type your new password</label>

                <div class="js-focus-state input-group u-form">
                  <input class="form-control u-form__input" type="password" name="password-check" required="" data-msg="Please enter a valid password." data-error-class="u-has-error" data-success-class="u-has-success" autocomplete="off">
                </div>
              </div>
              <!-- End Input -->


              <!-- Input -->
              <div class="js-form-message mb-4">
                <div class="d-flex justify-content-between align-items-center">
                  	<div class="form-group form-group-lg">
						<%- recaptchaForm %>
					</div>
                </div>
              </div>
              <!-- End Input -->

              

              <!-- Button -->
              <div class="row align-items-center mb-5">
                <div class="col-4 col-sm-6">
                  <a class="small u-link-muted" href="/contributor-login">Back to account login</a>
                </div>

                <div class="col-8 col-sm-6 text-right">
                  <button type="submit" value="submit" class="btn btn-primary u-btn-primary transition-3d-hover">Request Reset Link</button>
                </div>
              </div>
              <!-- End Button -->
            </form>
            <!-- End Form -->
          </div>

          <div class="col-lg-9 col-xl-7 d-none d-lg-block position-absolute-top-right-0 pr-0" style="margin-top: 105.6px;z-index: -5;">
          <figure class="w-100">
             <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 1374.7 1083.6" style="enable-background:new 0 0 1374.7 1083.6;" xml:space="preserve">
               <g>
                 <defs>
                   <path id="heroBlock1" d="M1374.7,0H687.6l-278,279.7c-150,150.9-148.1,395.3,4.4,543.8l0,0C554.1,960,774.9,968.7,925.4,843.6
                     l449.3-373.4V0z"></path>
                 </defs>
                 <clipPath id="heroBlock2">
                   <use xlink:href="#heroBlock1" style="overflow:visible;"></use>
                 </clipPath>
                 <g transform="matrix(1 0 0 1 0 0)" style="clip-path:url(#heroBlock2);">
                   <!-- Apply your (750px width to 750px height) image here -->
                   <image style="overflow:visible;" width="750" height="750" xlink:href="/images/light-large-pill-background.png" transform="matrix(1.4462 0 0 1.4448 290.09 0)"></image>
                 </g>
               </g>
             </svg>
           </figure>
        </div>

        
        </div>
      </div>
    </div>
    <!-- End Form -->
  </main>


<%- partial('./partials/footer.ejs') %>