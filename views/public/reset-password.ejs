<%- partial('./partials/header.ejs') %>

<header class="padding-top80 white-bg">

	<div class="container white-bg">

		<div class="banner-content text-center">
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<a href="/"><img class="wow fadeInDown banner-logo" src="/images/triforce-tokens-banner-logo-2.png" alt="TriForce Tokens Ltd Logo" /></a>
				</div>
			</div>
		</div>
		
	</div>

</header>

<div class="section">

	<div class="container">
	
		<div class="col-sm-12 col-md-12 col-lg-12">
			
            <% if(flash.has('errors')){ %>
			<br />
            <div class="alert alert-danger col-lg-12 col-md-12 col-sm-12">
                <% flash.get('errors').forEach(function (message) { %>
                <h4 class="error"><i class="fa fa-exclamation-triangle"></i> &nbsp;&nbsp;<%- message %></h4>
                <% }) %>
            </div>
            <% } %>

            <% if(flash.has('success')){ %>
			<br />
            <div class="alert alert-success col-lg-12 col-md-12 col-sm-12">
                <% flash.get('success').forEach(function (message) { %>
                <h4 class="success"><i class="fa fa-exclamation-check"></i> &nbsp;&nbsp;<%- message %></h4>
                <% }) %>
            </div>
            <% } %>
			
			<div class="form-container subscribe-form-container col-lg-8 col-md-8 col-sm-12 col-lg-offset-2 col-md-offset-2">
				<h2 class="subscribe-form-heading">please enter your new password below</h2>
				<form class="form" method="POST" action="<%= req.url %>">
					<div class="form-group form-group-lg">
						<input required="required" placeholder="CHOOSE NEW PASSWORD" class="form-control" type="password" name="password" value="" />
					</div>
					<div class="form-group form-group-lg">
						<input required="required" placeholder="RE-ENTER NEW PASSWORD" class="form-control" type="password" name="password-check" value="" />
					</div>
					<div class="form-group form-group-lg">
						<button type="submit" class="btn btn-block btn-cta presale-subscribe-btn">RESET PASSWORD</button>
					</div>
				</form>
				<a href="/#login-modal">I've remembered my password</a>
			</div>
			
		
		</div>
		
		
	</div>

</div>

<br />
<br />